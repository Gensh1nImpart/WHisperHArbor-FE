<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:theme="@style/Theme.Material3.Light"
              android:orientation="vertical" >

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dip"
            android:layout_margin="15dip"
            android:rowCount="8"
            android:columnCount="3" android:clipToPadding="true">

        <!-- username -->
        <TextView
                android:id="@+id/register_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="账        号"
        />

        <EditText
                android:id="@+id/register_username_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的账号"
                android:inputType="text"/>
        <TextView
                android:id="@+id/register_username_edit_warning"
                android:layout_width="wrap_content"
                android:textColor="@color/design_default_color_error"
                android:layout_height="wrap_content"/>
        <!-- password -->
        <TextView
                android:id="@+id/register_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="密        码"

        />
        <EditText
                android:id="@+id/register_password_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的密码"
                android:inputType="textPassword"
        />
        <TextView
                android:id="@+id/register_passwd_edit_warning"
                android:layout_width="wrap_content"
                android:textColor="@color/design_default_color_error"
                android:layout_height="wrap_content"/>
        <!-- confirm password -->
        <TextView
                android:id="@+id/register_confirmpassword_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="确认密码"

        />
        <EditText
                android:id="@+id/register_confirmpassword_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请再次输入您的密码"
                android:inputType="textPassword"
        />
        <TextView
                android:id="@+id/register_confirmpasswd_edit_warning"
                android:layout_width="wrap_content"
                android:textColor="@color/design_default_color_error"
                android:layout_height="wrap_content"/>
        <!-- nickname -->
        <TextView
                android:id="@+id/register_nickname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="昵        称"

        />

        <EditText
                android:id="@+id/register_nickname_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的昵称"
                android:inputType="text"
        />
        <TextView
                android:id="@+id/register_nickname_edit_warning"
                android:layout_width="wrap_content"
                android:textColor="@color/design_default_color_error"
                android:layout_height="wrap_content"/>
        <!-- reset -->
        <Button
                android:id="@+id/register_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
        />

        <!-- register -->
        <Button
                android:id="@+id/register_register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textCursorDrawable="@color/design_default_color_error"/>

    </GridLayout>

</LinearLayout>